<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Categories — Daily Dose</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />

  <style>
    :root{ --primary:#2d2a26; --accent:#c49a6c; --bg:#faf7f2; --ink:#1e1c19; --line:#e9e4da; }
    *{margin:0;padding:0;box-sizing:border-box}
    html,body{height:100%}
    body{font-family:"Poppins",system-ui,-apple-system,Segoe UI,Roboto,sans-serif;color:var(--ink);background:var(--bg);-webkit-font-smoothing:antialiased;-moz-osx-font-smoothing:grayscale}
    h1,h2,h3{font-family:"Playfair Display",serif;letter-spacing:.2px;color:var(--primary)}
    a{text-decoration:none;color:inherit}
    :focus-visible{outline:2px solid var(--accent);outline-offset:2px}

    /* NAVBAR */
    .navbar{position:fixed;top:0;left:0;right:0;height:68px;display:flex;align-items:center;justify-content:space-between;padding:0 7%;background:rgba(250,247,242,.85);backdrop-filter:saturate(180%) blur(6px);border-bottom:1px solid var(--line);z-index:1000}
    .navbar-logo a{font-family:"Playfair Display",serif;font-weight:700;font-size:1.6rem;letter-spacing:.4px;color:var(--primary)}
    .navbar-nav{list-style:none;display:flex;align-items:center;gap:1.2rem}
    .navbar-nav li a{display:inline-block;padding-bottom:2px;font-size:.98rem;color:var(--primary);border-bottom:1px solid transparent;transition:border-color .18s ease,opacity .18s ease}
    .navbar-nav li a:hover{border-color:var(--primary);opacity:.9}
    .nav-spacer{height:68px}

    /* PAGE WRAPPER */
    main.categories-page{padding:3rem 7% 4rem}
    .page-head{display:flex;align-items:flex-end;justify-content:space-between;gap:1rem;margin-bottom:1.2rem}
    .page-head h1{font-size:clamp(1.8rem,3vw,2.2rem)}

    /* GRID like products */
    .grid{display:grid;grid-template-columns:repeat(4,1fr);gap:1.2rem;margin-top:.8rem}
    @media (max-width:1200px){ .grid{grid-template-columns:repeat(3,1fr)} }
    @media (max-width:900px){ .grid{grid-template-columns:repeat(2,1fr)} }
    @media (max-width:600px){ .grid{grid-template-columns:1fr} }

    .card{background:#fff;border:1px solid var(--line);border-radius:16px;overflow:hidden;display:flex;flex-direction:column}
    .card-thumb{width:100%;height:180px;object-fit:cover}
    .card-body{padding:1rem;display:grid;gap:.35rem}
    .muted{color:#6a6258}
    .actions{display:flex;justify-content:flex-end;padding:0 1rem 1rem}
    .btn{display:inline-block;padding:.55rem .9rem;border-radius:10px;border:1px solid var(--line)}
    .btn:hover{border-color:var(--primary)}
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar">
    <div class="navbar-logo"><a href="/">Daily Dose Coffee</a></div>
    <ul class="navbar-nav">
      <li><a href="/">Home</a></li>
      <% if (currentUser) { %>
        <li><a href="/products">Products</a></li>
        <li><a href="/categories">Categories</a></li>
        <li><a href="/cart">Cart</a></li>
        <% if (currentUser.role === 'admin') { %>
          <li><a href="/products/add">Add Product</a></li>
        <% } %>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/logout">Logout</a></li>
      <% } else { %>
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Register</a></li>
      <% } %>
    </ul>
  </nav>
  <div class="nav-spacer" aria-hidden="true"></div>

  <main class="categories-page">
    <div class="page-head">
      <h1>Coffee Types</h1>
    </div>

    <div class="grid">
      <% data.forEach(c => { %>
        <article class="card">
          <!-- Category‑aware thumbnail mapping with coffee‑specific photos only (stable Unsplash CDN) -->
          <% const name = (c.name || '').toLowerCase(); %>
          <% let thumb = "https://images.unsplash.com/photo-1447933601403-0c6688de566e?q=80&w=1200&auto=format&fit=crop"; /* beans close‑up */ %>
          <% if (name.includes('gayo'))             thumb = "https://images.unsplash.com/photo-1509042239860-f550ce710b93?q=80&w=1200&auto=format&fit=crop"; /* cup + beans */ %>
          <% if (name.includes('toraja'))           thumb = "https://images.unsplash.com/photo-1495474472287-4d71bcdd2085?q=80&w=1200&auto=format&fit=crop"; /* pour‑over */ %>
          <% if (name.includes('mandheling'))       thumb = "https://images.unsplash.com/photo-1447933601403-0c6688de566e?q=80&w=1200&auto=format&fit=crop"; /* beans scoop */ %>
          <% if (name.includes('java'))             thumb = "https://images.unsplash.com/photo-1511920170033-f8396924c348?q=80&w=1200&auto=format&fit=crop"; /* espresso shot */ %>
          <% if (name.includes('bali') || name.includes('kintamani')) thumb = "https://images.unsplash.com/photo-1470337458703-46ad1756a187?q=80&w=1200&auto=format&fit=crop"; /* iced coffee */ %>
          <% if (name.includes('lintong') || name.includes('sumatra')) thumb = "https://images.unsplash.com/photo-1498804103079-a6351b050096?q=80&w=1200&auto=format&fit=crop"; /* cups at bar */ %>
          <% /* Brewing hints override origin */ %>
          <% if (name.includes('espresso'))         thumb = "https://images.unsplash.com/photo-1511920170033-f8396924c348?q=80&w=1200&auto=format&fit=crop"; %>
          <% if (name.includes('drip') || name.includes('pour')) thumb = "https://images.unsplash.com/photo-1495474472287-4d71bcdd2085?q=80&w=1200&auto=format&fit=crop"; %>
          <% if (name.includes('cold'))             thumb = "https://images.unsplash.com/photo-1470337458703-46ad1756a187?q=80&w=1200&auto=format&fit=crop"; %>
          <% if (name.includes('capsule'))          thumb = "https://images.unsplash.com/photo-1512568400610-62da28bc8a13?q=80&w=1200&auto=format&fit=crop"; %>

          <a href="/categories/<%= c.id %>">
            <img class="card-thumb" src="<%= thumb %>" alt="<%= c.name %> coffee" />
            <div class="card-body">
              <h3><%= c.name %></h3>
              <% if (c.productsCount != null) { %>
                <div class="muted"><%= c.productsCount %> items</div>
              <% } %>
            </div>
          </a>
          <div class="actions">
            <a class="btn" href="/categories/<%= c.id %>">View</a>
          </div>
        </article>
      <% }) %>
    </div>
  </main>
</body>
</html>