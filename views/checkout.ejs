<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Checkout — Daily Dose</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
  <style>
    :root{ --primary:#2d2a26; --accent:#c49a6c; --bg:#faf7f2; --ink:#1e1c19; --line:#e9e4da }
    *{margin:0;padding:0;box-sizing:border-box} body{font-family:"Poppins",system-ui,-apple-system,Segoe UI,Roboto,sans-serif;color:var(--ink);background:var(--bg)}
    h1,h2,h3{font-family:"Playfair Display",serif;color:var(--primary)} a{text-decoration:none;color:inherit}
    .navbar{position:fixed;top:0;left:0;right:0;height:68px;display:flex;align-items:center;justify-content:space-between;padding:0 7%;background:rgba(250,247,242,.85);border-bottom:1px solid var(--line)}
    .navbar-logo a{font-family:"Playfair Display",serif;font-weight:700;font-size:1.6rem;color:var(--primary)} .navbar-nav{list-style:none;display:flex;gap:1.2rem}
    .nav-spacer{height:68px}
    main.section{padding:3rem 7%}
    .container{max-width:820px;margin:0 auto}
    .summary{background:#fff;border:1px solid var(--line);border-radius:16px;padding:1.2rem}
    .summary ul{list-style:none;display:grid;gap:.4rem;margin:.6rem 0 1rem}
    .total{display:flex;justify-content:space-between;align-items:center;margin-top:1rem}
    .qr{margin-top:1rem;display:flex;justify-content:center}
    .qr img{width:220px;height:220px;border-radius:12px;border:1px solid var(--line);background:#fff;padding:.6rem}
    .btn{display:inline-block;padding:.8rem 1.2rem;border-radius:12px;background:var(--primary);color:#fff;font-weight:600}
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-logo"><a href="/">Daily Dose Coffee</a></div>
    <ul class="navbar-nav">
      <li><a href="/">Home</a></li>
      <% if (currentUser) { %>
        <li><a href="/products">Products</a></li>
        <li><a href="/categories">Categories</a></li>
        <li><a href="/cart">Cart</a></li>
        <% if (currentUser.role === 'admin') { %><li><a href="/products/add">Add Product</a></li><% } %>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/logout">Logout</a></li>
      <% } else { %>
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Register</a></li>
      <% } %>
    </ul>
  </nav>
  <div class="nav-spacer"></div>

  <main class="section checkout-page">
    <div class="container">
      <h1>Checkout</h1>
      <div class="summary">
        <ul>
          <% cartItems.forEach(o=>{ %>
            <li><%= o.qty %> × <%= o.Product.name %> = <%= formatCurrency(o.qty * o.Product.price) %></li>
          <% }) %>
        </ul>
        <div class="total">
          <strong>Total:</strong>
          <div><%= formatCurrency(total) %></div>
        </div>
        <div class="qr"><img src="<%= qrUrl %>" alt="Scan to pay"></div>
      </div>
    </div>
  </main>
</body>
</html>